generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(uuid())
  firstName String
  lastName  String
  profile   String?
  phone     String
  email     String  @unique
  password  String
  verified  Boolean @default(false)
  balance   Float   @default(0)
  // visaCards     VisaCard[]
